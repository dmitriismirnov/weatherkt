<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/small_margin"
    android:layout_marginStart="@dimen/small_margin"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/item_hours_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_card"
        tools:text="date" />

    <TextView
        android:id="@+id/item_hours_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_hours_date"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_card"
        tools:text="time" />

    <ImageView
        android:id="@+id/item_hours_icon"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@id/item_hours_time"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/v_ic_sun" />

    <TextView
        android:id="@+id/item_hours_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_hours_icon"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_small"
        tools:text="25 Â°C" />

    <TextView
        android:id="@+id/item_hours_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_hours_temperature"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/small_margin"
        android:textSize="@dimen/text_size_card"
        tools:text="direction" />

</RelativeLayout>